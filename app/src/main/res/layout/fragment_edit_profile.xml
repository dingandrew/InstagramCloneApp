<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/editRelLay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/snippet_top_editprofile_toolbar"></include>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/editRelLay2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editRelLay1">
            <include layout="@layout/snippet_center_editprofile"></include>
        </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>